<div>
    <div id="citationList" class="m-b-md">
        <div class="f-w-xl">{{t 'eosf.components.citationWidget.apa'}}</div>
        <span> {{apa}} </span>
        <div class="f-w-xl m-t-md">{{t 'eosf.components.citationWidget.mla'}}</div>
        <span> {{mla}} </span>
        <div class="f-w-xl m-t-md">{{t 'eosf.components.citationWidget.chicago'}}</div>
        <span> {{chicago}} </span>
    </div>
    <p><strong>{{t 'eosf.components.citationWidget.getMoreCitations'}}</strong></p>
    {{#power-select
        search=(perform findStyles)
        selected=selectedStyle
        loadingMessage=(t 'eosf.components.citationWidget.loadingMessage')
        noMatchesMessage=(t 'eosf.components.citationWidget.noMatchesMessage')
        searchMessage=(t 'eosf.components.citationWidget.searchMessage')
        onchange=(action 'selectStyle')
        renderInPlace=true
        as |style|
    }}
        {{style.attributes.title}}
    {{/power-select}}
    <pre id="citationText" class="formatted-citation">{{citationText}}</pre>
</div>
